{
	"name": "@evamss/mw-picard",
	"contributors": [
		"James Montalvo"
	],
	"keywords": [
		"mediawiki",
		"wiki",
		"configuration"
	],
	"version": "0.4.0",
	"license": "MIT",
	"engines": {
		"node": ">=16.0.0 | >=18.0.0"
	},
	"description": "Making MediaWiki config so",
	"main": "./dist/index.js",
	"bin": {
		"mw-picard": "./dist/index.js"
	},
	"repository": "https://github.com/jamesmontalvo3/mw-picard",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.16.7",
		"@types/jest": "^27.4.1",
		"@types/js-yaml": "^4.0.5",
		"@types/lodash": "^4.14.179",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-jest": "^26.1.1",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.5.1",
		"jest-junit": "^13.0.0",
		"prettier": "^2.5.1",
		"prettier-eslint": "^13.0.0",
		"ts-jest": "^27.1.3",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.5.0",
		"typescript": "^4.6.3"
	},
	"scripts": {
		"prebuild": "node -p \"'// This file is auto-generated by `prebuild` script in package.json\\n' + 'export const APP_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
		"build": "npm run clean && tsc",
		"build:watch": "npm run clean && tsc --watch",
		"clean": "rimraf ./dist/**",
		"lint": "eslint . --color --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --color --fix --ext .js,.jsx,.ts,.tsx",
		"test": "jest",
		"test:coverage": "jest --coverage --reporters=default --reporters=jest-junit",
		"test:all": "npm run lint && npm run type-check && npm run test:coverage",
		"type-check": "tsc --noEmit",
		"prepublishOnly": "npm run lint && npm run type-check && npm t && npm run build"
	},
	"dependencies": {
		"dedent-js": "^1.0.1",
		"execa": "^5.1.1",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"rimraf": "^3.0.2",
		"upath": "^2.0.1"
	}
}
